<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/textView_update_mood_title"
    tools:context="com.kevinmaher.x14328981.happy.UpdateActivity">

    <Button
        android:id="@+id/btn_update_face"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_alignStart="@+id/editText_update_update"
        android:layout_alignTop="@+id/textView_update_mood_title"
        android:background="@drawable/btn_face_happy_unselected" />

    <TextView
        android:id="@+id/textView_update_mood_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_update_mood_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="113dp"
        android:hint="Location" />

    <TextView
        android:id="@+id/textView_update_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_update_mood_location"
        android:layout_marginTop="-113dp"
        android:layout_toStartOf="@+id/btn_update_visibility"
        android:hint="Username" />

    <TextView
        android:id="@+id/textView_update_mood_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_update_mood_location"
        android:layout_below="@+id/textView_update_mood_title"
        android:layout_marginTop="-153dp"
        android:hint="Time" />

    <TextView
        android:id="@+id/textView_update_mood_date"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_update_mood_location"
        android:layout_below="@+id/textView_update_mood_title"
        android:hint="Date" />

    <TextView
        android:id="@+id/textView_update_mood_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_update_happy"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="Mood Influencer"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_update_happy"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_alignEnd="@+id/editText_update_update"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_face_happy_selected" />

