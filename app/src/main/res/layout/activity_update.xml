    <EditText
        android:id="@+id/textView_update_update"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:ems="10"
        android:hint="What influenced how you feel?"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_update_update"
        android:layout_width="307dp"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="212dp"
        android:background="@drawable/buttons_orange"
        android:text="Update Mood"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_update_indifferent"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_alignTop="@+id/btn_update_happy"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_indifferent" />

    <!--<Button-->
