    <Button
        android:id="@+id/btn_update_sad"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_alignStart="@+id/editText_update_update"
        android:layout_alignTop="@+id/btn_update_happy"
        android:background="@drawable/btn_face_sad_selected" />

    <Switch
        android:id="@+id/switch_update_update_location"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_update_mood_location"
        android:layout_alignParentTop="true"
        android:layout_marginTop="202dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/switch_update_update_location_text" />

    <Switch
        android:id="@+id/switch_update_update_visibility"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_update_mood_location"
        android:layout_below="@+id/switch_update_update_location"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/switch_update_update_visibility" />

    <Switch
        android:id="@+id/switch_update_update_username"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_update_mood_location"
        android:layout_below="@+id/switch_update_update_visibility"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/switch_update_update_username" />

    <Button
        android:id="@+id/btn_update_location_info"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/switch_update_update_location"
