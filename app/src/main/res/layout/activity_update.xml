        <!--android:background="@drawable/ic_indifferent_grey" />-->

    <Button
        android:id="@+id/btn_update_sad"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_alignEnd="@+id/textView_update_update"
        android:layout_alignTop="@+id/btn_update_happy"
        android:background="@drawable/ic_sad" />

    <Switch
        android:id="@+id/switch_update_location"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_update_update"
        android:layout_marginStart="6dp"
        android:layout_marginTop="201dp"
        android:text="Include my location" />

    <CheckBox
        android:id="@+id/checkBox_update_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/switch_update_location"
        android:layout_marginEnd="103dp" />

