    <Button
        android:id="@+id/btn_update_update"
        android:layout_width="307dp"
        android:layout_height="@dimen/btn_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@drawable/btn_rounding_orange"
        android:text="@string/btn_update_update"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/btn_text_size" />

    <Button
        android:id="@+id/btn_update_indifferent"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_alignTop="@+id/btn_update_happy"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_face_indifferent_selected" />

