    <Button
        android:id="@+id/btn_update_visibility_info"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/btn_update_face"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_info" />

    <Button
        android:id="@+id/btn_update_username_info"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/btn_update_face"
        android:layout_below="@+id/btn_update_visibility_info"
        android:background="@drawable/ic_info" />

    <Button
        android:id="@+id/btn_update_visibility"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/textView_update_mood_location"
        android:layout_below="@+id/textView_update_mood_location"
        android:layout_marginTop="-113dp"
        android:background="@drawable/ic_person_outline_black" />

    <TextView
        android:id="@+id/text_update_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="189dp"
        android:text="@string/text_update_preview"
        android:textSize="24sp"
        android:textStyle="bold" />

