<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/switch_reminders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:padding="20dp"
        android:text="@string/switch_reminders" />

    <Switch
        android:id="@+id/switch_sounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/switch_reminders"
        android:padding="20dp"
        android:text="@string/switch_big_text" />

    <Switch
        android:id="@+id/switch_vibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/switch_sounds"
        android:padding="20dp"
        android:text="@string/switch_vibration" />

    <Switch
        android:id="@+id/switch_debugging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/switch_vibration"
        android:padding="20dp"
        android:text="@string/switch_debugging" />

    <TextView
        android:id="@+id/text_version_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/switch_debugging"
        android:gravity="left|center_vertical|center"
        android:padding="20dp"
        android:text="@string/text_version_number" />

</RelativeLayout>